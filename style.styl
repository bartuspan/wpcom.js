*
  margin 0
  padding 0
  border none
  -webkit-user-select text

body
  background #47a3da
  color white

#wrapper
  font-family "Open Sans", sans-serif
  min-height 100vh

a
  text-decoration none

.center
  text-align center
  display block
  margin 0 auto

.main-title
  text-transform uppercase
  letter-spacing 1.5px
  font-size 1em
  font-weight 600
  padding 70px 0 50px
  padding 50px 20px

.project-title
  color #2f7097
  font-size 2.25em
  letter-spacing 1px
  margin-bottom 30px
  padding 0 20px
  font-size 1.75em
  line-height 1.4em
  opacity 1

.project-desc
  font-family "Merriweather", serif
  font-size 1.25em
  line-height 1.625em
  color #c7e3f4
  margin-bottom 60px
  position relative
  padding 0 20px
  font-size 1em
  line-height 1.4em
  margin-bottom 50px

button
  border-radius 3px
  color white
  letter-spacing 0.5px
  background-color #005684
  text-transform uppercase
  font-size 0.75em
  font-weight 600
  padding 20px 40px
  &:hover
    background-color #2b303b
    cursor auto

.git-button
  position relative
  opacity 1
  top 0

.editor-outer
  position absolute
  bottom -60px
  width 100%
  display none

.editor-inner
  margin 0 20px
  background-color #2b303b
  min-height 300px
  overflow-x hidden
  overflow-y scroll
  border-radius 3px 3px 0px 0px
  text-align left
  display none
  min-height 440px
  .editor-block
    height 200px

.gist
  .highlight
    background #2b303b !important

#footer
  height 70px
  background-color white
  font-family "Open Sans", sans-serif
  position absolute
  width 100%
  bottom 0
  bottom 0
  position relative
  bottom 0
  position absolute
  a
    margin-top 10px
    display block
    padding 0 20px
    margin-top 6px
    margin-top 10px
    padding-top 6px

.foot-img
  background-image url("http://automattic.com/wp-content/themes/a8c/automattic-2011/images/automattic-logo-2x.png")
  background-size 184px 20px
  width 184px
  height 20px
  display inline-block
  background-repeat no-repeat
  background-position left top
  background-color transparent
  margin-left 10px
  top 5px
  position relative

.foot-desc
  display block
  text-transform uppercase
  font-size 0.75em
  font-weight 400
  color #050708
  letter-spacing 0.5px
  top 12px
  position relative

@media screen and (max-width: 700px), screen and (max-height: 700px)
  #wrapper
    min-height 450px
    margin-top 50px